<UserControl x:Class="Sudoku_Games.View.ColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sudoku_Games.View"
             mc:Ignorable="d" 
             d:DesignHeight="270" d:DesignWidth="270">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Background="#c6ff1a"/>
        <Button Grid.Row="0" Grid.Column="1" Background="#ffff33"/>
        <Button Grid.Row="0" Grid.Column="2" Background="#ff1a75"/>
        <Button Grid.Row="1" Grid.Column="0" Background="#ff1a1a"/>
        <Button Grid.Row="1" Grid.Column="1" Background="#cc6666"/>
        <Button Grid.Row="1" Grid.Column="2" Background="#ff1aff"/>
        <Button Grid.Row="2" Grid.Column="0" Background="#ff8c1a"/>
        <Button Grid.Row="2" Grid.Column="1" Background="#ffb31a"/>
        <Button Grid.Row="2" Grid.Column="2" Background="#ffffff"/>

    </Grid>
</UserControl>
