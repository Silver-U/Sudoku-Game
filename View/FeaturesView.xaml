<UserControl x:Class="Sudoku_Games.View.FeaturesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sudoku_Games.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="250">
    <Grid>
        <StackPanel>
            <Button x:Name="newGame" Height="50" Width="200" Margin="0 50 0 25" />
            <Button x:Name="saveGame" Height="50" Width="200" Margin="0 25 0 25"/>
            <Button x:Name="loadGame" Height="50" Width="200" Margin="0 25 0 25"/>
            <Button x:Name="reset" Height="50" Width="200" Margin="0 25 0 25"/>
        </StackPanel>
    </Grid>
</UserControl>
