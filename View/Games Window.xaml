        mc:Ignorable="d"
        Title="Games_Window" Height="450" Width="500">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        

        <Grid.RowDefinitions>
            <RowDefinition Height="0.075*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock>FOU</TextBlock>

        <Grid Grid.Row="1" Background="Chocolate" >
            <StackPanel Background ="Red" VerticalAlignment="Center">
                <Grid Height="40"  VerticalAlignment="Center" >
                    <StackPanel Background ="Yellow" Orientation="Horizontal" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Button Height="15" Width="15"></Button>
                        <Button Height="15" Width="15"></Button>
                        <Button Height="15" Width="15"></Button>
                        <Button Height="15" Width="15"></Button>
                        <Button Height="15" Width="15"></Button>
                        <Button Height="15" Width="15"></Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="1">
            <Grid>
                <StackPanel>
                    <Button Height="30" Width="80"></Button>
                    <Button Height="30" Width="80"></Button>
                    <Button Height="30" Width="80"></Button>
                    <Button Height="30" Width="80"></Button>
                    <Button Height="30" Width="80"></Button>
                    <Button Height="30" Width="80"></Button>
                </StackPanel>
            </Grid>
        </Grid>
        
        
